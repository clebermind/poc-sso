{% include 'partials/header.html.twig' %}
    <div class="container">
        <h1>User List</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Username</th>
                    <th scope="col">Password</th>
                    <th scope="col">Roles</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.password }}</td>
                    <td>{{ user.roles | join(', ') }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% include 'partials/footer.html.twig' %}